@model MistyHollowWoodsInventory.Models.Bowls

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bowls</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="ID" class="control-label"></label>
                @Html.DisplayFor(model => model.ID)
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input class="form-control" type="file" id="ImageFile" name="ImageFile"/>
                @{
                    var base64 = Convert.ToBase64String(Model?.Image ?? new byte[0]);
                    var imgSrc = String.Format("data:image/jpeg;base64,{0}", base64);
                }

                <img src="@imgSrc" width="100"/> 
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WoodSpecies" class="control-label"></label>
                <select asp-for="WoodSpecies" class="form-control"></select>
                <span asp-validation-for="WoodSpecies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BowlType" class="control-label"></label>
                <select asp-for="BowlType" class="form-control"></select>
                <span asp-validation-for="BowlType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sold" class="control-label"></label>
                <input asp-for="Sold" class="form-control" />
                <span asp-validation-for="Sold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
