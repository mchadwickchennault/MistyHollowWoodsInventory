@model MistyHollowWoodsInventory.Models.Bowls

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bowls</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input class="form-control" type="file" id="ImageFile" name="ImageFile"/>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WoodSpecies" class="control-label"></label>
                <select asp-for="WoodSpecies" class="form-control" asp-items="Html.GetEnumSelectList<WoodSpecies>()"></select>
                <span asp-validation-for="WoodSpecies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BowlType" class="control-label"></label>
                <select asp-for="BowlType" class="form-control" asp-items="Html.GetEnumSelectList<BowlType>()"></select>
                <span asp-validation-for="BowlType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sold" class="control-label"></label>
                <input type="checkbox" data-val="true" id="Sold" name="Sold" value="true">
                <input name="Sold" type="hidden" value="false">
                <span asp-validation-for="Sold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
